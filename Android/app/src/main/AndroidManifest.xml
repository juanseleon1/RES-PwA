<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leon.sasepwa">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="com.softbank.hardware.pepper" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity
            android:name=".loadingActivity"
            android:label="@string/title_activity_loading">
        </activity>
        <activity
            android:name=".ratingQuestion"
            android:label="@string/title_activity_rating_question">
        </activity>
        <activity
            android:name=".showEmotion"
            android:label="@string/title_activity_show_emotion">
        </activity>
        <activity
            android:name=".congratsMessage"
            android:label="@string/title_activity_congrats_message">
        </activity>
        <activity
            android:name=".cheerMessage"
            android:label="@string/title_activity_cheer_message">
        </activity>
        <activity
            android:name=".messageActivity"
            android:label="@string/title_activity_message">
        </activity>
        <activity
            android:name=".welcomeActivity"
            android:label="@string/title_activity_welcome">
        </activity>
        <activity
            android:name=".questionActivity"
            android:label="@string/title_activity_question">
        </activity>
        <activity
            android:name=".errorActivity"
            android:label="@string/title_activity_error">
        </activity>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>